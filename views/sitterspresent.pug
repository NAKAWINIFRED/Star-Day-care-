doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='stylesheet', href='/bootstrap-5.3.3-dist/css/custom.css')
  title Sitter list
h1 Registered Sitter
table.table.table-dark.table-striped
  thead
    tr
      th Full Name
      th D.O.B
      th Moblie Number  
      th Gender
      th Eduction 
      th Location
      th Religion
      th NIN 
      th N.O.K 
      th Recommender&apos;s Name 
      th Recommender&apos;s Contact 
      th Action 
  tbody#sitters-list
       if sitters.length 
        each sitter in sitters  
          tr
           td #{sitter.fullname}  
           td #{sitter.dateOfBirth}
           td #{sitter.moblienumber}
           td #{sitter.gender}
           td #{sitter.education}
           td #{sitter.location}
           td #{sitter.religion}
           td #{sitter.identification}
           td #{sitter.nextOfKin}
           td #{sitter.recommendername }
           td #{sitter.recommendercontact}
           td 
              a(href="/sitterUpdate/"+sitter ._id class="button") Update
           td 
              form(method="POST", action="/deletesitter")
                input(type="hidden", name="id", value=sitter._id)
                button(type="submit" class="button") Delete
footer 
