// html for child registration
#message
.container
  header Update Form
  form#childform(action='/babyUpdate?id='+baby._id method='POST')
    .form.first
      .details.personal
        span.title Personal Details
        .fields
          .input-field
            label Full Name
            input#name(type='text' placeholder='Enter your name' name='fullname' value=baby.name) 
          .input-field
            label Date of Birth
            input#dateofbirth(type='date' placeholder='Enter birth date' name='dateOfBirth' value=baby.dateOfBirth)
          .input-field
            label Age
            input#age(type='text' placeholder='Enter age' name='age' value=baby.age)
          .input-field
            label Gender
            input#gender(type='text' placeholder='Enter gender' name='gender' value=baby.gender)
          .input-field
            label Mother&apos;s Name
            input#mothername(type='text' placeholder='Enter name' name='mothersname' value=baby.mothersname)
          .input-field
            label Father&apos;s Name
            input#fathername(type='text' placeholder='Enter name' name=' fathersname' value=baby.fathersname)
          .input-field
            label Mother&apos;s Contact
            input#mothercontact(type='text' placeholder='Enter moblie number' name=' motherscontact' value=baby.motherscontact)
          .input-field
            label Father&apos;s Contact
            input#fathercontact(type='text' placeholder='Enter moblienumber' name='fatherscontact' value=baby.fatherscontact)
          .input-field
            label Baby Number
            input#babynumber(type='text' placeholder="Enter Baby's number" name='identification' value=baby.identification)
          .input-field
            label Location
            input#location(type='text' placeholder='Enter place of residence'  name='location' value=baby.location)
          .input-field
            label Guardian
            input#broughtchild(type='text' placeholder='Enter name'  name='whobroughtchild' value=baby.whobroughtchild)
          .input-field
            label Fee paid
            input#feepaid(type='text' placeholder='Enter Amount(shs)' name=' feespaid' value=baby.feespaid)
          .input-field
            label Period of stay
            input#periodofstay(type='text' placeholder='Enter duration' name='periodOfStay' value=baby.periodOfStay)
          .input-field
            label Emergency Contact
            input#emergencycontact(type='text' placeholder='Enter Moblie number' name='emergencycontact' value=baby.emergencycontact)
          button.submit(type="submit") Update
